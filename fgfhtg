import requests
from bs4 import BeautifulSoup
 
# 发送HTTP请求
url = 'http://example.com'
response = requests.get(url)
 
# 解析HTML
soup = BeautifulSoup(response.content, 'html.parser')
 
# 提取所有<a>标签的文本和链接
for item in soup.find_all('a'):
    title = item.get_text()
    link = item.get('href')
    print(f'Title: {title}, Link: {link}')
